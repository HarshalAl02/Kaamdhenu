<% layout("layouts/navForMarket") -%>

  <section class="container my-5">
  <div class="row text-center">
       <!-- Header -->
        <h1 class="text-center title">Kaamdhenu Marketplace</h1>
        <p class="text-center subtitle">🌿 Ethical dairy, local cow trade, and sustainable living - all in one place.🌿</p>

    <!-- Marketplace Sections -->
    <div class="row mt-4">
      <div class="col-md-4">
          <div class="card" style="height: 12rem;">
              <div class="card-body">
                  <h2 class="card-title">❤️ Be a Cow Guardian</h2>
                  <p class="card-text">Extend your love and care by adopting a native cow and supporting sustainable living.</p>
                  <a href="/marketplace/buySell" class="btn btn-primary">Adopt Now</a>
              </div>
          </div>
      </div>
      <div class="col-md-4">
          <div class="card" style="height: 12rem;">
              <div class="card-body">
                  <h2 class="card-title">Indigenous Dairy Products</h2>
                  <p class="card-text">Explore pure, traditional cow-based products like A2 milk, ghee, curd, and more from Indian breeds.</p>
                  <a href="/marketplace/dairyProducts" class="btn btn-primary">Shop now</a>
              </div>
          </div>
      </div>
      <div class="col-md-4">
          <div class="card" style="height: 12rem;">
              <div class="card-body">
                  <h2 class="card-title">Nearby Cow Tracker 📍</h2>
                  <p class="card-text">Track cows near you and connect with sellers.</p>
                  <a href="/marketplace/nearbyCow" class="btn btn-primary">Find Cow</a>
              </div>
          </div>
      </div>
  </div>

  </div>
</section>
