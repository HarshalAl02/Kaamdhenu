<% layout("/layouts/boilerplate") -%>

<style>

  body {
      background: linear-gradient(to bottom right, #f4e7d3, #e8d8c3, #e3cfae);
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
  }

  .cow-card {
    display: flex;
    flex-direction: row;
    align-items: center;
    border-radius: 20px;
    background: #fffef5;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    padding: 15px;
    margin: 15px;
    transition: transform 0.3s ease;
  }

  .cow-card:hover {
    transform: scale(1.02);
  }

  .cow-card img {
    width: 100%;
    height: 200px;
    object-fit: contain; 
    border-radius: 12px;
  }

  .cow-details {
    margin-top: 10px;
    text-align: left;
    width: 100%;
    padding: 0 10px;
  }

  
  #data-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    padding-left: 0;
    list-style: none;
  }

  .container {
    max-width: 1200px;
    margin: auto;
    padding: 30px 20px;
  }
</style>


  <div class="container">
    <h2>Uploaded Cow Data</h2>

    <div class="cards-wrapper">
      <% if (cowData.length > 0) { %>
        <% cowData.forEach(cow => { %>
          <li class="list-group-item cow-card">
            <img src="/images/<%= cow.image %>" alt="cow">
            <div class="cow-details">
              <strong>Name:</strong> <%= cow.name %> <br>
              <strong>Breed:</strong> <%= cow.breed %> <br>
              <strong>Age:</strong> <%= cow.age %> <br>
              <strong>Location:</strong> <%= cow.location %>
            </div>
          </li>
        <% }) %>
      <% } else { %>
        <p style="text-align:center; color: #888;">No data uploaded yet.</p>
      <% } %>
    </div>

    <div style="text-align: center;">
      <a href="/home/profile" class=" btn-primary">ðŸ”™ Back to Profile</a>
    </div>
  </div>

